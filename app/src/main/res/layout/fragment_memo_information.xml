<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memo Information"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        />
    <LinearLayout
        android:layout_weight="1.05"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <FrameLayout
            android:layout_weight="0.6"
            android:id="@+id/frame_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:visibility="visible"
                android:text="Memo Item"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="14sp"
                android:background="@drawable/rectangle"
                 />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="0.7"
            android:id="@+id/frame_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:visibility="visible"
                android:text="Value"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="14sp"
                android:background="@drawable/rectangle"
                 />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/frame_layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_view_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:visibility="visible"
                android:text="Unit"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="14sp"
                android:background="@drawable/rectangle"
                 />
        </FrameLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_weight="0.33"
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="4dp"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_marginLeft="16dp"
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save as"
            />
    </LinearLayout>
</LinearLayout>

